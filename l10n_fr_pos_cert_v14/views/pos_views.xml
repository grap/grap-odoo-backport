<odoo>
    <record id="pos_order_form_inherit" model="ir.ui.view">
        <field name="name">pos.order.form.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <!-- <GRAP Patch Backport> -->
<!--             Dedicated place for certification -->
            <xpath expr="//page[@name='extra']" position='inside'>
               <group string="French Certification">
                    <field name="l10n_fr_hash"/>
                    <field name="l10n_fr_secure_sequence_number"/>
                    <field name="l10n_fr_string_to_hash"/>
                </group>
            </xpath>
            <!-- </GRAP Patch Backport> -->
        </field>
    </record>
</odoo>
